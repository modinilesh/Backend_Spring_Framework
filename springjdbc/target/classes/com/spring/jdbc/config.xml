<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd">
		
		<!--This bean is for DriverManagerDataSource class-->
		<bean class="org.springframework.jdbc.datasource.DriverManagerDataSource" name="dmds">
			<property name="driverClassName" value="com.mysql.cj.jdbc.Driver" />
			<property name="url" value="jdbc:mysql://localhost:3306/springjdbc" />
			<property name="username" value="root" />
			<property name="password" value="Nilesh@123" />
		</bean>
		
		
		<!--This bean is for JdbcTemplate class which will be containing object of DriverManagerDataSource class which implements DataSource interface-->
		<bean class="org.springframework.jdbc.core.JdbcTemplate" name="jdbcTemplate">
			<property name="dataSource">
				<ref bean="dmds" />
			</property>
		</bean>
		
		
		<!--This bean is for StudentDaoImpl which will insert student in database-->
		<bean class="com.spring.jdbc.dao.StudentDaoImpl" name="studentDao">
			<property name="jdbcTemplate" >
				<ref bean="jdbcTemplate"/>
			</property>
		</bean>
		
</beans>